<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 消失 -->
    <objectAnimator
        android:duration="0"
        android:propertyName="alpha"
        android:startOffset="0"
        android:valueFrom="1.0"
        android:valueTo="0.0" />
    <!-- 旋转 -->
    <objectAnimator
        android:duration="@integer/flip_anim_duration"
        android:propertyName="rotationY"
        android:startOffset="0"
        android:valueFrom="-180"
        android:valueTo="0" />
    <!-- 出现 -->
    <objectAnimator
        android:duration="0"
        android:propertyName="alpha"
        android:startOffset="@integer/flip_anim_half_duration"
        android:valueFrom="0.0"
        android:valueTo="1.0" />
</set>